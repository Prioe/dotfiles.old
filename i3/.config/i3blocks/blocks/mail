#!/bin/bash

separator="$(~/.config/i3blocks/blocks/util/separator)"

get_unread()
{
  # find ~/mail -type f | grep -vE ',[^,]*S[^,]*$' | wc -l
  notmuch count tag:unread
}

echo "<span font='8.5' font_stretch='expanded' font_weight='ultralight' foreground='#cccccc' >$separator ï€ƒ $(get_unread)</span>"

# mouse buttons
case $BLOCK_BUTTON in
    1) termite --exec mutt --title mutt_termite
esac 
