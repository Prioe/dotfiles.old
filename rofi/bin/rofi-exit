#!/bin/bash
# exit session

LOCK="Lock"
LOGOUT="Logout $USER"
SUSPEND="Suspend"
SLEEP="Hybrid Sleep"
HIBERNATE="Hibernate"
REBOOT="Reboot"
SHUTDOWN="Shutdown"

CMD=$(echo -e "$LOCK\n$LOGOUT\n$SUSPEND\n$SLEEP\n$HIBERNATE\n$REBOOT\n$SHUTDOWN" | rofi -width 350 -dmenu -p "Session: ")
case $CMD in
  $LOCK)
    dm-tool lock
    ;;
  $LOGOUT)
    i3-msg exit
    ;;
  $SUSPEND)
    systemctl suspend
    ;;
  $SLEEP)
    systemctl hybrid-sleep
    ;;
  $HIBERNATE)
    systemctl hibernate
    ;;
  $REBOOT)
    systemctl reboot
    ;;
  $SHUTDOWN)
    shutdown now
    ;;
esac
